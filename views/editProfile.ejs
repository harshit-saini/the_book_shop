<%- contentFor("body")  %> 
<div class="container-fluid">

  <div class="col-12 col-md-4 offset-md-4">
    <div class="card card-body">

      <form action="/users/edit-profile" method="post" enctype = "multipart/form-data" >
        <div class="form-group">
          <label for="name">Name</label>
          <input id="name" name="name" class="form-control" type="text" value="<%= user.name %> ">
        </div>
        <div class="form-group">
          <label for="profile-pic" >Profile Pic</label>
          <input id="profile-pic" name="profilePic" class="form-control" type="file" value="<%= user.name %> ">
        </div>

        <button class="btn btn-primary" type="submit"> OK</button>
        
      </form>
    </div>
  </div>


</div>